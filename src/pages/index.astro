---
import BaseLayout from '../layouts/BaseLayout.astro';
import LeadForm from '../components/LeadForm.astro';
import { states, getTopRideshareMarkets, getOneYearSOLStates, getContributoryNegligenceStates } from '../data/states';
import { getTopMarkets } from '../data/cities';

const topMarkets = getTopMarkets(10);
const urgentStates = getOneYearSOLStates();
const cnStates = getContributoryNegligenceStates();

const schema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Rideshare Lawyers Near Me",
  "url": "https://ridesharelawyersnearme.com",
  "description": "Find experienced rideshare accident lawyers nationwide. Free case evaluation for rideshare injury claims.",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://ridesharelawyersnearme.com/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

