---
import BaseLayout from '../layouts/BaseLayout.astro';

const webhookUrl = "https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead";
---

<BaseLayout 
  title="Free Consultation"
  description="Get a free, no-obligation case evaluation from an experienced Uber accident attorney. No fees unless you win."
>
  <section class="py-20 bg-gradient-to-br from-primary to-primary-dark text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Free Case Consultation</h1>
      <p class="text-xl text-gray-200 mb-4">
        Injured in a rideshare accident? Get the legal help you deserve.
      </p>
      <div class="flex flex-wrap justify-center gap-4 text-lg">
        <span class="bg-white/20 px-4 py-2 rounded-full">‚úì 100% Free</span>
        <span class="bg-white/20 px-4 py-2 rounded-full">‚úì No Obligation</span>
        <span class="bg-white/20 px-4 py-2 rounded-full">‚úì Confidential</span>
      </div>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Form - Takes 2 columns -->
        <div class="md:col-span-2 bg-gray-50 p-8 rounded-xl">
          <h2 class="text-2xl font-bold mb-6">Tell Us About Your Rideshare Accident</h2>
          
          <form action={webhookUrl} method="POST" class="space-y-6">
            <input type="hidden" name="source" value="free-consultation" />
            <input type="hidden" name="site" value="ridesharelawyersnearme.com" />
            
            <!-- Personal Info -->
            <div>
              <h3 class="font-semibold mb-4 text-primary">Your Information</h3>
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium mb-1">First Name *</label>
                  <input type="text" name="firstName" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
                </div>
                <div>
                  <label class="block text-sm font-medium mb-1">Last Name *</label>
                  <input type="text" name="lastName" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
                </div>
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium mb-1">Email *</label>
                <input type="email" name="email" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
              </div>
              <div>
                <label class="block text-sm font-medium mb-1">Phone *</label>
                <input type="tel" name="phone" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
              </div>
            </div>
            
            <!-- Accident Info -->
            <div>
              <h3 class="font-semibold mb-4 text-primary">Accident Details</h3>
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium mb-1">Your Role in the Accident *</label>
                  <select name="accidentType" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary">
                    <option value="">Select your role...</option>
                    <option value="uber-passenger">Uber/Lyft Passenger</option>
                    <option value="uber-driver">Uber/Lyft Driver</option>
                    <option value="other-driver">Driver of Another Vehicle</option>
                    <option value="pedestrian">Pedestrian Hit by Uber/Lyft</option>
                    <option value="cyclist">Cyclist Hit by Uber/Lyft</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium mb-1">Rideshare Company *</label>
                  <select name="rideshareCompany" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary">
                    <option value="">Select company...</option>
                    <option value="uber">Uber</option>
                    <option value="lyft">Lyft</option>
                    <option value="both">Both/Unknown</option>
                    <option value="other">Other Rideshare</option>
                  </select>
                </div>
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium mb-1">When did the accident happen? *</label>
                <select name="accidentTiming" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary">
                  <option value="">Select timeframe...</option>
                  <option value="today">Today</option>
                  <option value="this-week">This week</option>
                  <option value="this-month">This month</option>
                  <option value="1-3-months">1-3 months ago</option>
                  <option value="3-6-months">3-6 months ago</option>
                  <option value="6-12-months">6-12 months ago</option>
                  <option value="over-1-year">Over 1 year ago</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium mb-1">State where accident occurred *</label>
                <input type="text" name="state" required placeholder="e.g., California" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium mb-1">Were you injured? *</label>
                <select name="injured" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary">
                  <option value="">Select...</option>
                  <option value="yes-severe">Yes, severe injuries</option>
                  <option value="yes-moderate">Yes, moderate injuries</option>
                  <option value="yes-minor">Yes, minor injuries</option>
                  <option value="no">No injuries</option>
                  <option value="unknown">Unknown/Delayed symptoms</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium mb-1">Driver's app status during accident</label>
                <select name="driverStatus" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary">
                  <option value="">Select if known...</option>
                  <option value="during-trip">During a trip (passenger onboard)</option>
                  <option value="en-route">En route to pickup</option>
                  <option value="app-on">App on, waiting for ride</option>
                  <option value="unknown">Unknown</option>
                </select>
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium mb-1">Tell us what happened</label>
              <textarea name="description" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" placeholder="Describe the accident, your injuries, and any other relevant details..."></textarea>
            </div>
            
            <div class="flex items-start gap-2">
              <input type="checkbox" id="consultConsent" name="consent" required class="mt-1" />
              <label for="consultConsent" class="text-sm text-gray-600">
                I agree to receive communications about my case and understand an attorney will contact me. I have read the <a href="/privacy-policy/" class="underline">Privacy Policy</a> and <a href="/disclaimer/" class="underline">Legal Disclaimer</a>.
              </label>
            </div>
            
            <button type="submit" class="w-full bg-accent-gold hover:bg-yellow-400 text-gray-900 font-bold py-4 px-6 rounded-lg text-lg transition transform hover:scale-[1.02] shadow-lg">
              üöó Get My Free Case Review Now
            </button>
            
            <p class="text-center text-sm text-gray-500">
              üîí Your information is secure and confidential
            </p>
          </form>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <div class="bg-primary text-white p-6 rounded-xl">
            <h3 class="text-xl font-bold mb-4">Why Choose Us?</h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>No fees unless you win</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>Experienced rideshare accident attorneys</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>$100M+ recovered for clients</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>24/7 availability</span>
              </li>
              <li class="flex items-start gap-2">
                <span>‚úì</span>
                <span>Free case evaluation</span>
              </li>
            </ul>
          </div>

          <div class="bg-gray-50 p-6 rounded-xl">

          <div class="bg-gray-50 p-6 rounded-xl">
            <h3 class="font-bold mb-4">‚è±Ô∏è Time Matters</h3>
            <p class="text-gray-600 text-sm">
              Evidence disappears. Witnesses forget. Statutes of limitations expire. The sooner you contact us, the stronger your case.
            </p>
          </div>

          <div class="bg-secondary-light p-6 rounded-xl border border-primary">
            <h3 class="font-bold mb-4">üí∞ $1M Coverage</h3>
            <p class="text-gray-600 text-sm">
              Uber provides up to $1 million in liability coverage during active trips. Don't settle for less than you deserve.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
