---
import BaseLayout from '../layouts/BaseLayout.astro';

const webhookUrl = "https://services.leadconnectorhq.com/hooks/OsNgWuy8oZzLbp5BXbnD/webhook-trigger/mva-site-lead";
---

<BaseLayout 
  title="Contact Us | Rideshare Accident Lawyer"
  description="Contact our team for a free Uber accident case evaluation. Available 24/7 to help rideshare accident victims nationwide."
>
  <section class="py-20 bg-gradient-to-br from-primary to-primary-dark text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Contact Us</h1>
      <p class="text-xl text-gray-200">
        We're here to help rideshare accident victims. Reach out for a free case evaluation.
      </p>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold mb-6">Get In Touch</h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="text-3xl">üìß</div>
              <div>
                <h3 class="font-bold text-lg">Email</h3>
                <p class="text-gray-600">help@ridesharelawyersnearme.com</p>
                <p class="text-sm text-gray-500">Response within 24 hours</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="text-3xl">‚è∞</div>
              <div>
                <h3 class="font-bold text-lg">Hours</h3>
                <p class="text-gray-600">24/7 Emergency Line</p>
                <p class="text-sm text-gray-500">We're always available for urgent cases</p>
              </div>
            </div>
          </div>

          <div class="mt-8 p-6 bg-gray-50 rounded-xl">
            <h3 class="font-bold mb-3">üöó Why Contact Us?</h3>
            <ul class="space-y-2 text-gray-600">
              <li>‚úì Free case evaluation</li>
              <li>‚úì No fees unless you win</li>
              <li>‚úì Attorneys who specialize in rideshare cases</li>
              <li>‚úì Nationwide coverage</li>
              <li>‚úì Fast response time</li>
            </ul>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-gray-50 p-8 rounded-xl">
          <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
          
          <form action={webhookUrl} method="POST" class="space-y-4">
            <input type="hidden" name="source" value="contact-page" />
            <input type="hidden" name="site" value="ridesharelawyersnearme.com" />
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium mb-1">First Name *</label>
                <input type="text" name="firstName" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
              </div>
              <div>
                <label class="block text-sm font-medium mb-1">Last Name *</label>
                <input type="text" name="lastName" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
              </div>
            </div>
            
            <div>
              <label class="block text-sm font-medium mb-1">Email *</label>
              <input type="email" name="email" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
            </div>
            
            <div>
              <label class="block text-sm font-medium mb-1">Phone *</label>
              <input type="tel" name="phone" required class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" />
            </div>
            
            <div>
              <label class="block text-sm font-medium mb-1">Message</label>
              <textarea name="message" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary" placeholder="Tell us about your Uber/Lyft accident..."></textarea>
            </div>
            
            <div class="flex items-start gap-2">
              <input type="checkbox" id="contactConsent" name="consent" required class="mt-1" />
              <label for="contactConsent" class="text-xs text-gray-600">
                I agree to receive communications and understand an attorney will contact me. <a href="/privacy-policy/" class="underline">Privacy Policy</a>
              </label>
            </div>
            
            <button type="submit" class="w-full bg-secondary hover:bg-secondary-dark text-white font-bold py-4 px-6 rounded-lg transition">
              üöó Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
