---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { articles, getCategories, getArticlesByCategory } from '../../data/articles';

const categories = getCategories();
---

<BaseLayout 
  title="Uber Accident Blog" 
  description="Expert articles about Uber accidents, insurance claims, legal rights, and compensation. Stay informed about rideshare accident law."
>
  <section class="bg-primary text-white py-12">
    <div class="max-w-7xl mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Uber Accident Blog</h1>
      <p class="text-xl text-gray-300">Expert articles about rideshare accidents, insurance, and legal rights</p>
    </div>
  </section>

  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4">
      <!-- Categories -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-4">Browse by Category</h2>
        <div class="flex flex-wrap gap-3">
          {categories.map(cat => (
            <a href={`#${cat.toLowerCase().replace(/\s+/g, '-')}`} class="bg-secondary text-white px-4 py-2 rounded-lg hover:bg-secondary-dark transition">
              {cat}
            </a>
          ))}
        </div>
      </div>

      <!-- Articles by Category -->
      {categories.map(category => {
        const categoryArticles = getArticlesByCategory(category);
        return (
          <div id={category.toLowerCase().replace(/\s+/g, '-')} class="mb-12">
            <h2 class="text-2xl font-bold mb-6 pb-2 border-b-2 border-secondary">{category}</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {categoryArticles.map(article => (
                <a href={`/blog/${article.slug}/`} class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition">
                  <span class="text-xs text-secondary font-semibold">{article.category}</span>
                  <h3 class="font-bold text-lg mt-2 mb-2">{article.title}</h3>
                  <p class="text-gray-600 text-sm mb-4">{article.description}</p>
                  <div class="flex items-center justify-between text-sm text-gray-500">
                    <span>ðŸ“– {article.readTime}</span>
                    <span>{new Date(article.publishDate).toLocaleDateString()}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        );
      })}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 bg-primary text-white">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Have Questions About Your Accident?</h2>
      <p class="text-gray-300 mb-8">Get personalized answers from an experienced Uber accident attorney.</p>
      <a href="/free-consultation/" class="bg-secondary text-white px-8 py-4 rounded-lg font-bold hover:bg-secondary-light transition inline-block">
        Get Free Case Review
      </a>
    </div>
  </section>
</BaseLayout>
