---
interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  schema?: object;
  datePublished?: string;
  dateModified?: string;
}

const { 
  title, 
  description = "Find experienced rideshare accident lawyers near you. Free case evaluation for rideshare injury claims nationwide.",
  canonicalUrl,
  schema,
  datePublished = "2026-01-15T00:00:00Z",
  dateModified = "2026-02-09T00:00:00Z"
} = Astro.props;

const siteUrl = 'https://ridesharelawyersnearme.com';
const suffix = " | Rideshare Lawyer";

// Truncate function to keep titles under 60 chars
function truncateTitle(t: string, suffix: string): string {
  const maxLen = 60;
  const withSuffix = `${t}${suffix}`;
  if (withSuffix.length <= maxLen) return withSuffix;
  // If title alone is over maxLen, just truncate it
  if (t.length > maxLen) return t.substring(0, maxLen - 3) + "...";
  // Otherwise return title without suffix
  return t;
}

const fullTitle = truncateTitle(title, suffix);
